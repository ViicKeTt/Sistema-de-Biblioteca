<section>
     <div class="mt-5 page-wrapper font-robo">
        <div class="wrapper wrapper--w680">
            <div class="card card-1 card-2">
                <div class="card-heading"></div>
                <div class="card-body">
                    <h2 class="title text-dark">{{#if editMode}}Editar Editorial{{else}}Registrar Editorial{{/if}}</h2>
                    <form method="POST" action="{{#if editMode}}/Editar-Editorial{{else}}/Add-Editorial{{/if}}">
                        <div class="input-group">
                            <input class="input--style-1" type="text" placeholder="NOMBRE DEL EDITORIAL" name="nombreEditorial" value="{{#if editMode}}{{editorial.nombreEditorial}}{{/if}}">
                        </div>  
                        <div class="input-group">
                            <input class="input--style-1" type="tel" placeholder="DIGITE EL TELEFONO" name="telefonoEditorial" value="{{#if editMode}}{{editorial.telefonoEditorial}}{{/if}}"> 
                        </div>  
                        <div class="input-group">
                            <input class="input--style-1" type="TEXT" placeholder="PAIS DEL EDITORIAL" name="paisEditorial" value="{{#if editMode}}{{editorial.paisEditorial}}{{/if}}"> 
                        </div> 
                        {{#if editMode}} 
                            <input type="hidden" name="idEditorial" value="{{editorial.idEditorial}}"> 
                        {{/if}}
                        <div 
                        class="p-t-20">
                            <button class="btn btn--radius btn--green" type="submit">{{#if editMode}}Editar editorial{{else}}Agregar editorial{{/if}}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>