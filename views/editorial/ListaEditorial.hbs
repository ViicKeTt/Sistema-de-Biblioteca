<section>
  <div class="row">
    <div class="col-md-8"></div>
    <div class="mt-5 col-md-3">
      <a href="/AddEditorial" class="btn btn-primary">Agregar autor</a>
    </div>
    <div class="col-md-1"></div>
  </div>
  <div class="container"> 
  <div class="row"> 
  {{#if hasEditorial}}
    <h1 class="mb-5"> Lista de Editoriales</h1>
  {{#each editoriales}}
 <div class="col-md-3">
<div class="card bg-success bg-gradient">
  <div class="card-header text-dark">
    <b>Nombre editorial: </b>{{this.nombreEditorial}}
  </div>
    <div class="card-body">
    <h5 class="card-title text-dark"><b>Telefono: </b>{{this.telefonoEditorial}}</h5> 
    <p class="card-text text-dark"><b>Pais: </b>{{this.paisEditorial}}</p> 
     <a href="/EditarEditorial/{{this.idEditorial}}?edit=true" class="mt-3 btn btn-warning">Editar</a>
      <form method="POST" class="SegundoForm" action="/EditorialDelete">
        <input type="hidden" name="idEditorial" value="{{this.idEditorial}}" />
        <button type="submit" class="mt-3 btn btn-danger" >Eliminar</button>
      </form>
 </div>
</div> 
  </div>
{{/each}}
{{else}}
  <h1>No hay Editoriales regitrados</h1>
{{/if}} 
</section>