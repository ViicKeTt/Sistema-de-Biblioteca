<section>
 {{#if autores }}
  {{#if editoriales }} 
 <div class="row">
    <div class="col-md-8"></div>
    <div class="mt-5 col-md-3">
      <a href="/AddLibro" class="btn btn-primary">Agregar libro</a>
    </div>
    <div class="col-md-1"></div>
  </div>
  <div class="container"> 
  <div class="row"> 
  {{#if hasLibro}}
    <h1 class="mb-5">Lista de libros</h1>
  {{#each libro}}
 <div class="col-md-3">
  <div class="card bg-dark bg-gradient">
    <div class="card-header">
      <b>Nombre editorial: </b>{{this.nombreLibro}}
    </div>
    <div class="card-body">
    <h5 class="card-title"><b>Telefono: </b>{{this.anoPublicacion}}</h5> 
    <a href="/EditLibro/{{this.idLibro}}?edit=true" class="mt-3 btn btn-warning">Editar</a>
      <form method="POST" class="SegundoForm" action="/DelteLibro">
        <input type="hidden" name="idLibro" value="{{this.idLibro}}" />
        <button type="submit" class="mt-3 btn btn-danger" >Eliminar</button>
      </form>
    </div>
  </div> 
</div>
{{/each}}
{{else}}
  <h1>No hay Libros regitrados</h1> 
{{/if}}
{{else}}
  <h1>No hay autores regitrados</h1> 
 {{/if}}
{{else}}
  <h1>No hay Editoriales regitrados</h1>
 {{/if}}
</section>